{
  "moduleFileExtensions": ["js", "json", "ts", "pb"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.(spec|e2e-spec)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "'^src/(.*)$'": "<rootDir>/src/$1",
    "^src/grpc/types/(.*)\\.pb$": "<rootDir>/dist/grpc/types/$1.pb"
  },
  "moduleDirectories": ["node_modules", "src"],
  "roots": ["<rootDir>/src", "<rootDir>/tests"]
}
